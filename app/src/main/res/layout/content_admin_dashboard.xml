<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ramjidentalcom.ramjidentalservices.AdminPanel.AdminDashboard"
    tools:showIn="@layout/admin_dashboard">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview">

                <ImageButton
                    android:layout_marginTop="15dp"
                    android:layout_width="100dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="100dp"
                    android:background="#fff"
                    android:id="@+id/addadmin"
                    android:scaleType="fitXY"
                    android:src="@drawable/adminadd"
                    android:layout_alignTop="@+id/imageButton"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <Spinner
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="45dp"
                android:spinnerMode="dropdown"
                android:popupBackground="#17c0ef"
                android:id="@+id/spinneraddadmin"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview">

                <ImageButton
                    android:layout_marginTop="15dp"
                    android:layout_width="100dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/viewadmin"
                    android:background="#fff"
                    android:src="@drawable/adminview"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorPrimary"
                android:id="@+id/spinnerviewadmin"
                android:popupBackground="#17c0ef"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview">

                <ImageButton
                    android:layout_marginTop="15dp"
                    android:layout_width="100dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/checkcust"
                    android:background="#fff"
                    android:src="@drawable/checkpatients"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Check Patients"
                android:textSize="16sp"
                android:textColor="#fff"
                android:elevation="4dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/checkcusttext"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="100dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/add_clntcustomers"
                    android:background="#fff"
                    android:src="@drawable/addclntcustomers"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Add Client Customers"
                android:textSize="16sp"
                android:textColor="#fff"
                android:elevation="4dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/addclntcustomers"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="100dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/clntcustomers"
                    android:background="#fff"
                    android:src="@drawable/clntcustomers"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Clients Customers"
                android:textSize="16sp"
                android:textColor="#fff"
                android:elevation="4dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/spinnerclntcust"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
