<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ramjidentalcom.ramjidentalservices.OwnerPanel.OwnerDashboard"
    tools:showIn="@layout/owner_dashboard">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview">
            <ImageButton
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignTop="@+id/imageButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:scaleType="fitXY"
                android:background="#fff"
                android:id="@+id/addadmin"
                android:src="@drawable/add"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Add Admins"
                android:textSize="16sp"
                android:textColor="#fff"
                android:elevation="4dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/viewadmintext"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview">

            <ImageButton
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignTop="@+id/imageButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/viewadmin"
                android:background="#fff"
                android:scaleType="fitXY"
                android:src="@drawable/book"
                android:layout_gravity="center_horizontal" />
</LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="View"
                android:textSize="16sp"
                android:textColor="#fff"
                android:elevation="4dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/view"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"  />

        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview">
            <ImageButton
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignTop="@+id/imageButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/editadmin"
                android:background="#fff"
                android:scaleType="fitXY"
                android:src="@drawable/editadmin"
                android:layout_gravity="center_horizontal" />
</LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Edit Admin"
                android:textSize="16sp"
                android:textColor="#fff"
                android:elevation="4dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/edit"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview">
            <ImageButton
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignTop="@+id/imageButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/deleteadmin"
                android:background="#fff"
                android:scaleType="fitXY"
                android:src="@drawable/delete"
                android:layout_gravity="center_horizontal" />
</LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Delete Admin"
                android:textSize="16sp"
                android:textColor="#fff"
                android:elevation="4dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/delete"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
