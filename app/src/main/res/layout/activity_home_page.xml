<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="ramjidentalcom.ramjidentalservices.HomePage">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:drawableLeft="@drawable/login"
        android:id="@+id/button4"
        android:textColor="#fff"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="anonymouslogin"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Make Appointment"
        android:paddingRight="5dp"
        android:drawableLeft="@drawable/appnt"
        android:id="@+id/button9"
        android:background="@color/colorPrimaryDark"
        android:layout_above="@+id/button10"
        android:layout_toRightOf="@+id/button4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAMJI Hospitals International"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:drawableLeft="@drawable/web"
        android:id="@+id/button10"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Powered By ANSHIKA TECHNOLOGIES"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/textView3"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
